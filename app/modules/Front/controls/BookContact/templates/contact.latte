{block}
<form n:name="form" class="form-manage">
    <fieldset>
        <legend>Kontaktn√≠ informace</legend>
        <div class="form-group">
            {label name /}
            {input name, class => "form-control"}
        </div>
        <div class="form-group">
            {label phone /}
            {input phone, class => "form-control"}
        </div>
        <div class="form-group">
